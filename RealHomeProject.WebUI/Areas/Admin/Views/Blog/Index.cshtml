@using RealHomeProject.Entities.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var counter = 0;
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Blogs</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Dashboard/Index">Admin</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Blog
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">

            <!-- Striped rows start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Blog List Page</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li>
                                        <a href="/Admin/Blog/BlogAdd/">
                                            Add
                                            <i class="ft-plus-circle"></i>
                                        </a>
                                    </li>
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    @*									<li><a data-action="close"><i class="ft-x"></i></a></li>
                                    *@
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            @*<div class="card-body">
                            <p class="card-text">Use <code class="highlighter-rouge">.table-striped</code> to add zebra-striping to any table row within the <code class="highlighter-rouge">&lt;tbody&gt;</code>. This styling doesn't work in IE8 and below as <code>:nth-child</code> CSS selector isn't supported.</p>
                            </div>*@
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Title</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Username</th>
                                            <th scope="col">Postdate</th>
                                            <th scope="col"> Proccess</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            counter++;
                                            <tr>
                                                <th scope="row">@counter</th>
                                                <td>@item.Title</td>
                                                <td>@item.BlogCategories.CategoryName</td>
                                                <td>@item.AppUser.UserName</td>
                                                <td>
                                                    @(((DateTime)item.PostDate).ToShortDateString())
                                                </td>
                                                <td>
                                                    <a class="btn btn-outline-light" href="/Blog/BlogDetails/@item.ID/"> View to Blog</a>
                                                    <a class="btn btn-outline-success" href="/Admin/Blog/BlogUpdate/@item.ID/"> Update</a>
                                                    <a class="btn btn-outline-danger" href="/Admin/Blog/BlogDelete/@item.ID/"> Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Striped rows end -->
        </div>
    </div>
</div>

